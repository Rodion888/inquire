rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /explorations/{explorationId} {
      // Anyone can read public explorations
      allow read: if resource.data.isPublic == true;

      // Authenticated owner can read their own (including private)
      allow read: if request.auth != null
                  && resource.data.userId == request.auth.uid;

      // Authenticated owner can create
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;

      // Authenticated owner can update their own
      allow update: if request.auth != null
                    && resource.data.userId == request.auth.uid;

      // Authenticated owner can delete their own
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
